{
    "env": {
        "browser": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "import/extensions": 0,
        "react/prop-types": 0,
        "no-plusplus": 0,
        "react/jsx-no-bind": 0
    }
}